extends ./base

block main-content
    div.container
        form(action="contact/send" method="post" id="contact-form")
            h2(class="form-signin-heading") #{contactStr.header}
            p #{contactStr.subHeader}

            label(for="username" class="sr-only") #{contactStr.name}
            input(type="text" class="form-control" id="username" name="username" placeholder= contactStr.name + " *" required data-error="Няма въведено име")
            div(class="help-block with-errors")

            label(for="email" class="sr-only") #{contactStr.email}
            input(type="text" class="form-control" id="email" name="email" placeholder= contactStr.email + " *" required data-error="Няма въведена електронна поща")
            div(class="help-block with-errors")

            label(for="subject" class="sr-only") #{contactStr.header}
            input(type="text" class="form-control" id="subject" name="subject" placeholder= contactStr.header + " *" required data-error="Няма въведено заглавие")
            div(class="help-block with-errors")

            label(for="description" class="sr-only") #{contactStr.description}
            textarea(type="text" class="form-control" id="description" rows="4" name="description" placeholder= contactStr.description + " *" required data-error="Няма въведено описание")
            div(class="help-block with-errors")

            input(type="submit" class="btn btn-success" value= contactStr.submit)

        div(class="row")
            div(class="col-md-12")
                p(class="text-muted") * #{contactStr.requiredFields}